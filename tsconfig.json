{
  "include": ["src"],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "lib": ["ES2015"],
    "moduleResolution": "Node",
    "outDir": "dist/",

    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "noEmit": false,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,

    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true
  }
}
